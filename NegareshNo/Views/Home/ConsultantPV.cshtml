@model NegareshNo.Core.ViewModels.Consultant.ConsultantSiteVM

<div class="col-10 mx-auto my-5 col-md-6 col-lg-4">
    <div class="card">
        <div class="card-background card-img-top" alt=""></div>
        <!-- card body -->
        <div class="card-body text-center customer-card-body">

            <img src="~/image/ConsultantImage/@Model.ImageName" class="rounded-circle customer-img" style="width: 100px; height:100px;" alt="" srcset="">
            <div class="card-title">
                <h5 class="customer-name">@Model.ConsultantFullName</h5>
            </div>
            <h6 class="customer-job font-weight-bold">:رزومه</h6>
            <p class="customer-quote text-muted text-right">
                @Model.CareerSummary
            </p>
        </div>
        <div class="card-footer">
            <a  href="/Consultant/@Model.ConsultantId" class="btn-card-footer btn btn-outline-default">ادامه رزومه</a>
        </div>
    </div>

</div>